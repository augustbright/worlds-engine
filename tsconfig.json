{
    "include": ["./src/**/*.ts", "./src/**/*.tsx"],
    "exclude": ["node_modules"],
    "compilerOptions": {
        "target": "ES5",
        "module": "CommonJS",
        "strict": true,
        "allowSyntheticDefaultImports": true,
        "declaration": false,
        "esModuleInterop": true,
        "jsx": "react-jsx",
        "moduleResolution": "Node",
        "outDir": "./dist",
        "rootDir": "./src",
        "sourceMap": true,
        "baseUrl": "src"
    }
}